@model EP.CMS.Presentation.Web.Models.LoginModel

@{
    ViewBag.Title = "Log in";
    Layout = null;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @*<meta http-equiv="CACHE-CONTROL" content="NO-CACHE">*@
    <title>@ViewBag.Title - Administration Module</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="~/Content/styles/modal.css" rel="stylesheet" />
    <link href="~/Content/styles/template.css" rel="stylesheet" />

    <script src="~/Scripts/cms-core.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <!--[if IE 7]>
<link href="/Content/styles/ie7.css" rel="stylesheet" type="text/css" />
<![endif]-->

    <!--[if gte IE 8]>
<link href="/Content/styles/ie8.css" rel="stylesheet" type="text/css" />
<![endif]-->

</head>
<body id="minwidth-body">
    <div id="loader_cont" style="display: none;">
        <img src="~/Content/images/page_loader.gif">
    </div>
    <div id="border-top" class="h_blue">
        <span class="logo"><a href="#" target="_blank">
            <img src="~/Content/images/logo.png" alt="Emirates Post"></a></span>
        <span class="title-logo">
            <img src="~/Content/images/stone-river.png" />

        </span>
        <span class="title">

            <a href="#">CMS</a></span>
    </div>
    <div id="content-box">
        <div id="element-box" class="login">
            <div class="m wbg">
                <h1>Administration Login</h1>

                <div id="system-message-container">

                    @Html.ValidationSummary(true)
                </div>
                <div id="section-box">
                    <div class="m">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "form-login" }))
                        {
                            @Html.AntiForgeryToken()
                            <fieldset class="loginform">

                                @Html.LabelFor(m => m.UserName, new { @id = "mod-login-username-lbl" })
                                @Html.TextBoxFor(m => m.UserName, new { @id = "mod-login-username" })
                                @Html.ValidationMessageFor(m => m.UserName)

                                @Html.LabelFor(m => m.Password, new { @id = "mod-login-password-lbl" })
                                @Html.PasswordFor(m => m.Password, new { @id = "mod-login-password" })
                                @Html.ValidationMessageFor(m => m.Password)

                             @*   @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox", id = "mod-login-remember-lbl" })
                                 @Html.CheckBoxFor(m => m.RememberMe, new { @id = "mod-login-remember" })
                *@

                                <div class="button-holder">
                                    <div class="button1">
                                        <div class="next">
                                            <a href="#" onclick="document.getElementById('form-login').submit();">Log in</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="clr"></div>
                            </fieldset>
                        }
                        <div class="clr"></div>
                    </div>
                </div>

                <p>Use a valid username and password to gain access to the administrator backend.</p>
                <div id="lock"></div>
            </div>
        </div>

    </div>
    <div id="content-box">
        <input type="hidden" id="hdnBaseUrl" value="@Url.Content("~/")" />
        <input type="hidden" id="hdnController" value="@ViewContext.RouteData.Values["controller"].ToString()" />
    </div>
    <div id="dialog-holder">
    </div>
    <p align="center">Content Managment System</p>
    <div id="footer">
        <p class="copyright">
            <a href="#">CMS®</a> is an application that comes under the E-Services Dept. of EPGH
        </p>
    </div>
     <script>
         $("#mod-login-password").keypress(function (e) {
             if (e.which == 13) {
                 e.preventDefault();
                 document.getElementById('form-login').submit();
             }
         });
    </script>
    <noscript>
        Warning! JavaScript must be enabled for proper operation of the Administrator backend.	
    </noscript>
</body>
</html>



